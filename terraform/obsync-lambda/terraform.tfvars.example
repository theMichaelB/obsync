# Copy to terraform.tfvars and edit values

aws_region           = "us-east-1"
function_name        = "obsync-sync"
lambda_zip_path      = "../../build/obsync-lambda.zip"
memory_size          = 1024
timeout              = 900
enable_schedule      = false
schedule_expression  = "rate(1 hour)"

# Required: ARN of Secrets Manager secret containing combined credentials
# Create with: aws secretsmanager create-secret --name obsync-credentials --secret-string file://credentials.json
secrets_manager_secret_arn = "arn:aws:secretsmanager:us-east-1:123456789012:secret:obsync-credentials-abc123"

s3_prefix        = "vaults/"
s3_state_prefix  = "state/"
