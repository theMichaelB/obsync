{
  "_comment": "Example configuration with sample values - Copy to config.json and replace with your actual credentials",
  
  "api": {
    "_comment": "Obsidian API settings - these defaults usually don't need changing",
    "base_url": "https://api.obsidian.md",
    "timeout": "30s",
    "max_retries": 3,
    "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) obsidian/1.8.10 Chrome/132.0.6834.196 Electron/34.2.0 Safari/537.36"
  },
  
  "auth": {
    "_comment": "Your Obsidian account credentials",
    "email": "john.doe@example.com",
    "password": "MySecureP@ssw0rd123!",
    "totp_secret": "JBSWY3DPEHPK3PXP",
    "_totp_comment": "Get TOTP secret from Obsidian Settings > Account > Two-factor authentication",
    "token_file": "./.obsync/token.json",
    "vault_credentials_file": "./vault_credentials.example.json"
  },
  
  "storage": {
    "_comment": "Where to store synced vaults and state data",
    "data_dir": "./my-obsidian-vaults",
    "state_dir": "./.obsync/state",
    "temp_dir": "./.obsync/temp",
    "max_file_size": 104857600,
    "_size_comment": "104857600 = 100MB max file size"
  },
  
  "sync": {
    "_comment": "Sync performance and behavior settings",
    "base_dir": "./synced-vaults",
    "chunk_size": 1048576,
    "_chunk_comment": "1048576 = 1MB chunks for downloads",
    "max_concurrent": 5,
    "retry_attempts": 3,
    "retry_delay": "1s",
    "progress_interval": "500ms",
    "validate_checksums": true
  },
  
  "log": {
    "_comment": "Logging configuration",
    "level": "info",
    "_level_options": "debug, info, warn, error",
    "format": "text",
    "_format_options": "text, json",
    "file": "./obsync.log",
    "_file_comment": "Leave empty to disable file logging",
    "max_size": 10,
    "max_backups": 3,
    "max_age": 7,
    "color": true,
    "timestamp": true
  },
  
  "dev": {
    "_comment": "Development/debugging options (optional)",
    "save_websocket_trace": false,
    "trace_path": "./.obsync/traces",
    "insecure_skip_verify": false
  }
}